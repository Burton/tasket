
<ul>
<% @tasks.each do |task| %>
	<li id="task_<%= task.id %>" class="task_element">
		<p><span>Task:</span> <%= task.body %></p>
		<p><span>Created on:</span> <%= human_date(task.created_at) %></p>
		<% if task.tasked_by_id == logged_in_user.id && task.tasked_id != logged_in_user.id %>
			%p= "<span>tasked:</span> #{User.first(:id => task.tasked_id).login}  (#{User.first(:id => task.tasked_id).email})"
			<p><span>tasked:</span> <%= User.first(:id => task.tasked_id).login %> (<%= User.first(:id => task.tasked_id).email %>)</p>
		<% end %>
		
		<% if task.tasked_by_id != logged_in_user.id %>
				<p>
					tasked by: <%= User.first(:id => task.tasked_by_id).login %> (<%= User.first(:id => task.tasked_by_id).email %>)
				</p>
		<% end %>
		
		<% if task.tasked_id == logged_in_user.id %>
			<p>
				<a href="#" class="complete_task">mark completed</a>
				|
				<a href="#" class="remove_task">remove</a>
			</p>
		<% end %>
	</li>
<% end %>
</ul>